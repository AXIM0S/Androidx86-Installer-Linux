#!/usr/bin/bash

# Shell Script for Android Installer x86
# Copyright (C) 2021
# Must be run as root

if [[ -z $1 ]];then

  if [[ -d /mnt/tmpadvin/ ]];then
    pkexec umount /mnt/tmpadvin
    pkexec rm /mnt/tmpadvin -r
  fi

  echo "[*] Adv-Installer : Unmounting"
else
  pkexec umount $1
  echo "[*] Adv-Installer : Unmounting $1"
fi
